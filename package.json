{
   "name": "shopmaster",
   "version": "0.1.0",
   "private": true,
   "dependencies": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
   },
   "devDependencies": {
      "autoprefixer": "^10.4.21",
      "init": "^0.1.2",
      "npx": "^10.2.2",
      "postcss": "^8.5.6",
      "react-scripts": "5.0.1",
      "tailwindcss": "^3.4.13"
   },
   "scripts": {
      "build-css": "npx tailwindcss -i ./src/tailwind.css -o ./src/tailwind-output.css",
      "watch-css": "npx tailwindcss -i ./src/tailwind.css -o ./src/tailwind-output.css --watch",
      "start": "npm run watch-css & react-scripts start",
      "build": "npm run build-css && react-scripts build",
      "test": "react-scripts test",
      "eject": "react-scripts eject"
   },
   "eslintConfig": {
      "extends": [
         "react-app",
         "react-app/jest"
      ]
   },
   "browserslist": {
      "production": [
         ">0.2%",
         "not dead",
         "not op_mini all"
      ],
      "development": [
         "last 1 chrome version",
         "last 1 firefox version",
         "last 1 safari version"
      ]
   }
}
